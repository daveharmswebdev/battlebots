div.thunderdome.container
	- console.log(player, challenger);
	h1 Two Enter One Leaves
	div.row
		div.thunder--player
			p= 'Player Health: ' + player.health
			select
				- console.log(player.weapons);
				each val, index in player.weapons
					- console.log('within each', index, val.name)
					option(value=index)= val.name
			div.btn-grp(role='group', aria-label='...')
				button#moveTo.btn.btn-default.pControl(type='button') Move Towards
				button#moveAway.btn.btn-default.pControl(type='button') Move Away
				button#aim.btn.btn-default.pControl(type='button') Aim
				button#fire.btn.btn-default.pControl(type='button') Fire
				button#changeWeapon.btn.btn-default.pControl(type='button') Change Weapons

		div.thunder--challenger
			p= 'Challenger Health: ' + challenger.health
			ul
				each val in challenger.weapons
					li= val
	div.distance.devel
		p.moves--content.devel= 'Moves: ' + moves
		p.distance--content.devel= 'Distance: ' + distance